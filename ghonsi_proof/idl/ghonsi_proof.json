{
  "version": "0.1.0",
  "name": "ghonsi_proof",
  "description": "Ghonsi Proof - On-chain proof verification system for Solana",
  "instructions": [
    {
      "name": "initializeAdmin",
      "docs": [
        "Initialize the admin account for the program",
        "Can only be called once per program instance"
      ],
      "accounts": [
        {
          "name": "adminAccount",
          "isMut": true,
          "isSigner": false,
          "docs": ["The admin account to initialize"]
        },
        {
          "name": "adminAuthority",
          "isMut": false,
          "isSigner": true,
          "docs": ["The authority who can manage admins"]
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": []
    },
    {
      "name": "registerProof",
      "docs": [
        "Register a new proof on-chain",
        "Creates a proof record with IPFS hash and transaction details"
      ],
      "accounts": [
        {
          "name": "proofAccount",
          "isMut": true,
          "isSigner": false,
          "docs": ["The proof account to create"]
        },
        {
          "name": "userAccount",
          "isMut": false,
          "isSigner": true,
          "docs": ["The user's wallet address"]
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": [
        {
          "name": "proofType",
          "type": "string",
          "docs": ["Type of proof (e.g., certificate, work_history)"]
        },
        {
          "name": "proofName",
          "type": "string",
          "docs": ["Name of the proof"]
        },
        {
          "name": "ipfsHash",
          "type": "string",
          "docs": ["IPFS hash of the proof metadata"]
        },
        {
          "name": "transactionHash",
          "type": "string",
          "docs": ["Solana transaction hash that paid for this proof"]
        }
      ]
    },
    {
      "name": "submitForApproval",
      "docs": [
        "Submit a proof for admin approval",
        "User submits their proof to queue for review"
      ],
      "accounts": [
        {
          "name": "proofAccount",
          "isMut": true,
          "isSigner": false,
          "docs": ["The proof account"]
        },
        {
          "name": "userAccount",
          "isMut": false,
          "isSigner": true,
          "docs": ["The user submitting"]
        }
      ],
      "args": []
    },
    {
      "name": "approveProof",
      "docs": [
        "Admin approves a proof",
        "Only admin accounts can call this"
      ],
      "accounts": [
        {
          "name": "proofAccount",
          "isMut": true,
          "isSigner": false,
          "docs": ["The proof account to approve"]
        },
        {
          "name": "adminAccount",
          "isMut": false,
          "isSigner": true,
          "docs": ["The admin account"]
        },
        {
          "name": "adminAuthority",
          "isMut": true,
          "isSigner": false,
          "docs": ["Admin authority for verification"]
        }
      ],
      "args": [
        {
          "name": "notes",
          "type": {
            "option": "string"
          },
          "docs": ["Optional notes from admin"]
        }
      ]
    },
    {
      "name": "rejectProof",
      "docs": [
        "Admin rejects a proof",
        "Proof is marked as rejected with reason"
      ],
      "accounts": [
        {
          "name": "proofAccount",
          "isMut": true,
          "isSigner": false,
          "docs": ["The proof account to reject"]
        },
        {
          "name": "adminAccount",
          "isMut": false,
          "isSigner": true,
          "docs": ["The admin account"]
        }
      ],
      "args": [
        {
          "name": "reason",
          "type": "string",
          "docs": ["Reason for rejection"]
        }
      ]
    },
    {
      "name": "addAdmin",
      "docs": [
        "Add a new admin user",
        "Only super admin can call this"
      ],
      "accounts": [
        {
          "name": "newAdminAccount",
          "isMut": true,
          "isSigner": false,
          "docs": ["The new admin account"]
        },
        {
          "name": "superAdminAccount",
          "isMut": false,
          "isSigner": true,
          "docs": ["Super admin authority"]
        },
        {
          "name": "systemProgram",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": [
        {
          "name": "permissions",
          "type": {
            "vec": "string"
          },
          "docs": ["Permissions for the new admin"]
        }
      ]
    },
    {
      "name": "removeAdmin",
      "docs": [
        "Remove admin privileges from a user",
        "Only super admin can call this"
      ],
      "accounts": [
        {
          "name": "adminAccountToRemove",
          "isMut": true,
          "isSigner": false
        },
        {
          "name": "superAdminAccount",
          "isMut": false,
          "isSigner": true
        }
      ],
      "args": []
    },
    {
      "name": "getProofStatus",
      "docs": [
        "Get the status of a proof",
        "Returns approval status and details"
      ],
      "accounts": [
        {
          "name": "proofAccount",
          "isMut": false,
          "isSigner": false
        }
      ],
      "args": []
    }
  ],
  "accounts": [
    {
      "name": "Proof",
      "docs": ["Stores proof metadata on-chain"],
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "user",
            "type": "publicKey",
            "docs": ["User's wallet address"]
          },
          {
            "name": "proofType",
            "type": "string",
            "docs": ["Type of proof"]
          },
          {
            "name": "proofName",
            "type": "string",
            "docs": ["Name of proof"]
          },
          {
            "name": "ipfsHash",
            "type": "string",
            "docs": ["IPFS hash of full metadata"]
          },
          {
            "name": "transactionHash",
            "type": "string",
            "docs": ["Solana tx that paid for this"]
          },
          {
            "name": "status",
            "type": {
              "enum": [
                "pending",
                "submitted",
                "approved",
                "rejected",
                "needs_revision"
              ]
            },
            "docs": ["Current approval status"]
          },
          {
            "name": "createdAt",
            "type": "i64",
            "docs": ["Timestamp of creation"]
          },
          {
            "name": "approvedAt",
            "type": {
              "option": "i64"
            },
            "docs": ["Timestamp of approval"]
          },
          {
            "name": "approvedBy",
            "type": {
              "option": "publicKey"
            },
            "docs": ["Admin who approved"]
          },
          {
            "name": "rejectionReason",
            "type": {
              "option": "string"
            },
            "docs": ["Reason if rejected"]
          },
          {
            "name": "notes",
            "type": {
              "option": "string"
            },
            "docs": ["Additional notes from admin"]
          },
          {
            "name": "bump",
            "type": "u8",
            "docs": ["PDA bump seed"]
          }
        ]
      }
    },
    {
      "name": "AdminAccount",
      "docs": ["Stores admin authorization data"],
      "type": {
        "kind": "struct",
        "fields": [
          {
            "name": "authority",
            "type": "publicKey",
            "docs": ["Admin authority"]
          },
          {
            "name": "isAdmin",
            "type": "bool",
            "docs": ["Is this user an admin"]
          },
          {
            "name": "isSuperAdmin",
            "type": "bool",
            "docs": ["Is this user a super admin"]
          },
          {
            "name": "permissions",
            "type": {
              "vec": "string"
            },
            "docs": ["List of permissions"]
          },
          {
            "name": "addedAt",
            "type": "i64",
            "docs": ["When admin was added"]
          },
          {
            "name": "bump",
            "type": "u8",
            "docs": ["PDA bump seed"]
          }
        ]
      }
    }
  ],
  "events": [
    {
      "name": "ProofRegistered",
      "fields": [
        {
          "name": "user",
          "type": "publicKey",
          "index": true
        },
        {
          "name": "proofType",
          "type": "string"
        },
        {
          "name": "ipfsHash",
          "type": "string"
        }
      ]
    },
    {
      "name": "ProofApproved",
      "fields": [
        {
          "name": "proofAccount",
          "type": "publicKey",
          "index": true
        },
        {
          "name": "admin",
          "type": "publicKey",
          "index": true
        },
        {
          "name": "timestamp",
          "type": "i64"
        }
      ]
    },
    {
      "name": "ProofRejected",
      "fields": [
        {
          "name": "proofAccount",
          "type": "publicKey",
          "index": true
        },
        {
          "name": "admin",
          "type": "publicKey",
          "index": true
        },
        {
          "name": "reason",
          "type": "string"
        }
      ]
    },
    {
      "name": "AdminAdded",
      "fields": [
        {
          "name": "admin",
          "type": "publicKey",
          "index": true
        },
        {
          "name": "addedBy",
          "type": "publicKey"
        }
      ]
    }
  ],
  "errors": [
    {
      "code": 6000,
      "name": "Unauthorized",
      "msg": "You are not authorized to perform this action"
    },
    {
      "code": 6001,
      "name": "InvalidProofStatus",
      "msg": "Invalid proof status for this operation"
    },
    {
      "code": 6002,
      "name": "AdminAlreadyExists",
      "msg": "Admin already exists"
    },
    {
      "code": 6003,
      "name": "InvalidAdminAuthority",
      "msg": "Invalid admin authority"
    },
    {
      "code": 6004,
      "name": "ProofNotFound",
      "msg": "Proof account not found"
    }
  ]
}
